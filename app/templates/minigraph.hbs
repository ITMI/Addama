<ul class="minigraph-legend pull-right well nav nav-list">
    {{#each legends}}
    <li>
        <span style="background-color: {{color}}; color: {{color}}; height: 20px;">&nbsp;&nbsp;&nbsp;</span>
        {{label}}
    </li>
    {{/each}}
</ul>
<div class="row">
    {{#each nodetypes}}
    <div class="span3 offset1">
        <h4>{{label}}</h4>
        {{#each nodes}}
        <div id="{{uid}}" class="node-info well">
            {{label}}
            {{#each measures}}
            <div class="node-measures" data-key="{{key}}" data-value="{{value}}" data-color="{{color}}"></div>
            {{/each}}
        </div>
        {{/each}}
    </div>
    {{/each}}
</div>